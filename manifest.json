{
    "name": "EZClip",
    "version": "2.1",
    "manifest_version": 3,
    "description": "Quickly copy and manage commonly used text snippets.",
    "permissions": ["contextMenus", "clipboardWrite", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "128": "icons/icon128.png"
    },
    "host_permissions": ["<all_urls>"]
  }
  